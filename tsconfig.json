{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "src/js",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "types": ["@types/jquery"],

  },
  "include": ["src/ts"],
  "exclude": ["node_modules", "dist", "webpack.config.js"]
}
